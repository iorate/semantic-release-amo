{
  "name": "semantic-release-amo",
  "description": "A semantic-release plugin to publish Firefox add-ons to AMO (addons.mozilla.org).",
  "version": "1.0.0",
  "author": "iorate",
  "bugs": {
    "url": "https://github.com/iorate/semantic-release-amo/issues"
  },
  "dependencies": {
    "@semantic-release/error": "^3.0.0",
    "aggregate-error": "^4.0.1",
    "axios": "^1.3.0",
    "execa": "^6.1.0",
    "form-data": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash.template": "^4.5.0",
    "marked": "^4.2.12",
    "zip-dir": "^2.0.0",
    "zod": "^3.20.2",
    "zod-validation-error": "^0.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash.template": "^4.5.1",
    "@types/marked": "^4.0.8",
    "@types/node": "^14.18.36",
    "@types/semantic-release": "^17.2.6",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "semantic-release": "^20.1.0",
    "typescript": "^4.9.5"
  },
  "exports": {
    ".": "./dist/index.js",
    "./update-addon": "./dist/update-addon.js"
  },
  "files": [
    "./dist/*.js",
    "./dist/update-addon.d.ts",
    "./update-addon.d.ts"
  ],
  "homepage": "https://github.com/iorate/semantic-release-amo#readme",
  "keywords": [
    "semantic-release",
    "amo",
    "firefox",
    "add-on"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "packageManager": "pnpm@10.11.0",
  "peerDependencies": {
    "semantic-release": ">=18"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iorate/semantic-release-amo.git"
  },
  "scripts": {
    "build": "tsc",
    "check": "pnpm run --sequential /^check:/",
    "check:biome": "biome check",
    "check:prettier": "prettier --check .",
    "check:tsc": "tsc --noEmit",
    "ci": "pnpm run --sequential /^ci:/",
    "ci:biome": "biome ci --reporter=github",
    "ci:prettier": "prettier --check .",
    "ci:tsc": "tsc --noEmit",
    "fix": "pnpm run --sequential /^fix:/",
    "fix:biome": "biome check --write",
    "fix:prettier": "prettier --write ."
  }
}
