{
  "name": "semantic-release-amo",
  "version": "1.0.0",
  "description": "A semantic-release plugin to publish Firefox add-ons to AMO (addons.mozilla.org).",
  "keywords": [
    "semantic-release",
    "amo",
    "firefox",
    "add-on"
  ],
  "homepage": "https://github.com/iorate/semantic-release-amo#readme",
  "bugs": {
    "url": "https://github.com/iorate/semantic-release-amo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iorate/semantic-release-amo.git"
  },
  "license": "MIT",
  "author": "iorate",
  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "./dist/*.js"
  ],
  "scripts": {
    "build": "tsc",
    "check": "pnpm run --sequential /^check:/",
    "check:biome": "biome check",
    "check:prettier": "prettier --check .",
    "check:tsc": "tsc --noEmit",
    "ci": "pnpm run --sequential /^ci:/",
    "ci:biome": "biome ci --reporter=github",
    "ci:prettier": "prettier --check .",
    "ci:tsc": "tsc --noEmit",
    "fix": "pnpm run --sequential /^fix:/",
    "fix:biome": "biome check --write",
    "fix:prettier": "prettier --write ."
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "@semantic-release/error": "^4.0.0",
    "axios": "^1.9.0",
    "es-toolkit": "^1.38.0",
    "execa": "^9.5.3",
    "form-data": "^4.0.2",
    "jsonwebtoken": "^9.0.2",
    "marked": "^15.0.11",
    "zip-dir": "^2.0.0",
    "zod": "^3.24.4",
    "zod-validation-error": "^3.4.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash.template": "^4.5.3",
    "@types/node": "^22.15.19",
    "@types/semantic-release": "^20.0.6",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.4",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "semantic-release": ">=20"
  },
  "packageManager": "pnpm@10.11.0"
}
