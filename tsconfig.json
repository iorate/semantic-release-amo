{
  "compilerOptions": {
    "target": "es2021",
    "module": "node16",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
